{
    "name": "dotcom",
    "version": "1.0.0",
    "description": "MDCo",
    "main": "index.html",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "serve": "browser-sync start --server \"prod\" --files \"prod\"",
        "css:lint": "stylelint src/scss/*.scss --syntax scss || true",
        "css:scss": "sass --style=compressed --sourcemap=none src/scss/style_pack.scss prod/style_pack.css",
        "css:autoprefixer": "postcss -u autoprefixer -r prod/*.css",
        "watch:css": "onchange \"src/scss\" -- npm run build:css",
        "build:css": "npm run css:lint && npm run css:scss && npm run css:autoprefixer",
        "watch:html": "onchange \"src/html\" -- npm run build:html",
        "build:html": "posthtml -c posthtml.json",
        "watch:js": "onchange \"src/js\" -- webpack --mode=development",
        "build:js": "webpack --mode=production",
        "watch": "run-p serve watch:css watch:html watch:js",
        "build": "run-p build:css build:html build:js",
        "watch:img": "onchange \"src/img\" -- npm run build:img",
        "build:img": "imagemin src/img/* --out-dir=prod/img"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/moonshotdesignco/dotcom.git"
    },
    "author": {
        "name": "Harry Dunaway",
        "email": "hello@harrywilsondunaway.com"
    },
    "bugs": {
        "url": "https://github.com/moonshotdesignco/dotcom/issues"
    },
    "homepage": "https://github.com/moonshotdesignco/dotcom#readme",
    "devDependencies": {
        "@babel/preset-env": "^7.12.1",
        "autoprefixer": "^10.0.1",
        "babel-loader": "^8.1.0",
        "browser-sync": "^2.26.13",
        "eslint": "^7.11.0",
        "htmlnano": "^0.2.7",
        "imagemin": "^7.0.1",
        "imagemin-cli": "^6.0.0",
        "node-sass": "^4.14.1",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.0.2",
        "postcss": "^8.1.2",
        "postcss-cli": "^8.1.0",
        "posthtml": "^0.13.4",
        "posthtml-cli": "^0.8.0",
        "posthtml-modules": "^0.6.2",
        "stylelint": "^13.7.2",
        "webpack": "^5.1.3",
        "webpack-cli": "^4.1.0"
    }
}
