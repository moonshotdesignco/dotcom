{
    "name": "dotcom",
    "version": "1.0.0",
    "description": "MDCo",
    "main": "index.html",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "serve": "browser-sync start --server \"p\" --files \"p\"",
        "css:scss": "sass --style=compressed --no-source-map src/scss/style.scss p/style.css",
        "css:autoprefixer": "postcss -u autoprefixer -r p/style.css",
        "watch:css": "onchange \"src/scss\" -- npm run build:css",
        "build:css": "npm run css:scss && npm run css:autoprefixer",
        "watch:html": "onchange \"src/html\" -- npm run build:html",
        "build:html": "posthtml -c posthtml.json",
        "watch:js": "onchange \"src/js\" -- npm run build:js",
        "build:js": "terser src/js/script.js -c -m -o p/script.js",
        "watch": "run-p serve watch:css watch:html",
        "build": "run-p build:css build:html",
        "watch:img": "onchange \"src/img\" -- npm run build:img",
        "build:img": "imagemin src/img/* --out-dir=p/img"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/moonshotdesignco/dotcom.git"
    },
    "author": {
        "name": "Harry Dunaway",
        "email": "hello@harrywilsondunaway.com"
    },
    "bugs": {
        "url": "https://github.com/moonshotdesignco/dotcom/issues"
    },
    "homepage": "https://github.com/moonshotdesignco/dotcom#readme",
    "devDependencies": {
        "autoprefixer": "^10.0.1",
        "browser-sync": "^2.26.13",
        "htmlnano": "^0.2.7",
        "imagemin": "^7.0.1",
        "imagemin-cli": "^6.0.0",
        "npm-run-all": "^4.1.5",
        "onchange": "^7.0.2",
        "postcss": "^8.1.2",
        "postcss-cli": "^8.1.0",
        "posthtml": "^0.13.4",
        "posthtml-cli": "^0.8.0",
        "posthtml-modules": "^0.6.2"
    }
}
